@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="preconnect" href="https://fonts.googleapis.com" asp-append-version="true">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e8390de748.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
</head>

<body>
    <div class="first">
        <div class="second" style="overflow: hidden;">
            <div class="filter" id="filter"></div>
            <div class="logo">
                <div class="logo-photo">
                    <h3 class="heads">Credex Technology</h3>
                </div>
                <div class="list-div">
                    <ul class="list">
                        <li><span class="heads"><a style=" text-decoration: none; color: var(--secondary-color);" href="/dashboard.html">Dashboard</a></span></li>
                        <li><span id="darkmode" onclick="dark()" class="heads">Light Mode</span></li>
                        <li><button class="btn-nav">Log In</button></li>
                        <li><button class="btn-nav">Sign Up</button></li>
                    </ul>
                </div>
            </div>
            <div class="login">
                <div class="login-content">
                    <h2 class="login-head">Welcome Back...</h2>
                    <h4 class="login-body">Enter Username and Password</h4>
                    <form action="javascript:void(0);" method="POST" onsubmit="example()" class="form-inp">
                        <div class="cred-div">
                            <input type="text" placeholder="Username" id="userid" class="cred" />
                            <i class="fa-regular fa-envelope" style="font-size: 1rem;"></i>
                        </div>
                        <div class="cred-div">
                            <input type="password" name="Password" class="cred" id="pass" placeholder="Password" />
                            <i class="fa-sharp fa-regular fa-eye fa-lg" style="font-size: 1rem;"></i>
                        </div>
                        <div class="div-btn">
                            <input type="submit" id="login-button" class="btn-submit" value="Login">
                            <i class="fa-sharp fa-solid fa-arrow-right" style="font-size:1rem;"></i>
                        </div>
                        <div class="remember" style="display:flex;gap:10px;">
                            <h4>Remember me?</h4>
                            <input id="remember" type="checkbox" style="margin-top:3px;"/>
                        </div>
                    </form>
                    <h4 class="login-body">By login you agree to our <a style="color:rgb(143, 143, 143)" href="#">terms and conditions</a></h4>

                    <h4 class="login-body">Dont have an account yet? <a style="color:rgb(143, 143, 143)" href="#">Sign Up</a></h4>
                </div>
            </div>
            <div class="line">
                <svg style="background-color: transparent;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1920 176.79">
                    <g id="Layer_2" data-name="Layer 2">
                        <g id="Layer_1-2" data-name="Layer 1">
                            <path class="svg-1"
                                  d="M0,0C324.53,1.85,563.42,5.49,648.5,4.29c31.62-.45,81.29-2.12,127,27,4.47,2.85,23.65,17.56,62,47,35.48,27.23,43.7,34.71,60,43,26.1,13.26,51.75,18.33,73,20q56,.57,112,1,418.71,3.24,837.5-1v35.5H0Z" />
                        </g>
                    </g>
                </svg>
                <img src="~/css/icons8-itachi-uchiha.svg" class="image-1">
                <h4 class="help-name">Admin</h4>
                <h4 class="help">Hi, How was your day?</h4>
            </div>

        </div>
    </div>
    <script src="~/js/site.js" type="text/javascript" asp-append-version="true">
    </script>
</body>
</html>
